    <%= link_to "Rails Chat", root_path, class: "item" %>
    <a class="item">
        ChatRoom
    </a>
    <a class="item">
        About
    </a>
    <div class="right menu">
        <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu"> 
                <% if logged_in? %>
                    <%= link_to "Logout", logout_path, class: "item", data: { turbo_method: :delete } %>
                <% else %>
                    <%= link_to "Login", login_path, class: "item" %>
                    <a class="item">Create New Account</a>
                <% end %>
            </div>
        </div>
        <% if !logged_in? %>
            <div class="item">
                <%= link_to "Login", login_path, class: "ui primary button" %>
            </div>
        <% end %>
    </div>
